  <meta charset="UTF-8" />
  <title>WELCOME, FREAKY.</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      height: 100vh;
      overflow: hidden;
      background: #05050a;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, Arial;
      color: #f1f1f1;
      cursor: none;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
    }

    /* neon background dots */
    .bg {
      position: fixed;
      inset: 0;
      z-index: -2;
      background: radial-gradient(circle at 20% 30%, rgba(255,0,200,0.16), transparent 45%),
                  radial-gradient(circle at 80% 70%, rgba(0,200,255,0.16), transparent 45%),
                  radial-gradient(circle at 50% 10%, rgba(180,0,255,0.12), transparent 50%);
      filter: blur(25px);
      animation: float 14s infinite alternate ease-in-out;
      pointer-events: none;
    }

    @keyframes float {
      0% { transform: translate(0,0) scale(1); }
      100% { transform: translate(-3%, 2%) scale(1.15); }
    }

    .wrapper {
      z-index: 20;
      max-width: 420px;
      width: 100%;
      padding: 28px 24px;
      border-radius: 20px;
      background: rgba(255,255,255,0.06);
      backdrop-filter: blur(16px);
      border: 1px solid rgba(255,255,255,0.06);
      transition: 0.6s ease;
      pointer-events: auto;
    }

    .hidden { opacity: 0; transform: scale(0.9); pointer-events: none; }

    .glitch-title {
      font-size: 15px;
      letter-spacing: 0.20em;
      color: #d78bff;
      margin-bottom: 16px;
      animation: glitch 1.4s infinite;
      text-transform: uppercase;
    }

    @keyframes glitch {
      0%, 100% { text-shadow: 0 0 0 #ff00c8, 0 0 0 #00eaff; }
      20% { text-shadow: -1px 0 #ff00c8, 2px 0 #00eaff; }
      40% { text-shadow: 2px 0 #ff00c8, -1px 0 #00eaff; }
      60% { text-shadow: -2px 0 #ff00c8, 1px 0 #00eaff; }
      80% { text-shadow: 1px 0 #ff00c8, -1px 0 #00eaff; }
    }

    .line { font-size: 15px; margin-bottom: 6px; opacity: 0.9; }
    .muted { font-size: 13px; opacity: 0.6; margin-top: 10px; }

    .btn {
      margin-top: 26px;
      width: 100%;
      padding: 12px;
      border-radius: 100px;
      background: rgba(255,255,255,0.08);
      border: 1px solid rgba(255,255,255,0.18);
      color: white;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      cursor: pointer;
      transition: 0.2s;
      position: relative;
      z-index: 50;
      pointer-events: auto;
    }

    .btn:hover { background: rgba(255,255,255,0.14); }
    .btn:active { transform: scale(0.95); }

    /* cursor trail */
    .trail {
      position: fixed;
      width: 7px;
      height: 7px;
      border-radius: 50%;
      background: #c86cff;
