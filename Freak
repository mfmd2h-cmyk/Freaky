<body>

<div class="bg"></div>
<div id="darkEnd"></div>
<div id="finalScreen">nothing more to see.</div>

<div class="wrapper" id="card">
  <div class="glitch-title" id="title">WELCOME, FREAKY.</div>
  <p class="line" id="line1">you didn’t tap this by accident.</p>
  <p class="line" id="line2">you were curious.</p>
  <p class="line muted" id="hint">tap next.</p>
  <button class="btn" id="nextBtn">next</button>
</div>

<script>
  const screens = [
    {
      title: "WELCOME, FREAKY.",
      line1: "you didn’t tap this by accident.",
      line2: "you were curious.",
      hint: "tap next.",
      btn: "next"
    },
    {
      title: "curiosity",
      line1: "curiosity always wants a reward.",
      line2: "but sometimes… there isn’t one.",
      hint: "",
      btn: "continue"
    },
    {
      title: "question",
      line1: "so what brought you here?",
      line2: "the click? the mood? the void?",
      hint: "only you know.",
      btn: "end"
    },
    {}
  ];

  let current = 0;

  const cardEl = document.getElementById("card");
  const titleEl = document.getElementById("title");
  const line1El = document.getElementById("line1");
  const line2El = document.getElementById("line2");
  const hintEl = document.getElementById("hint");
  const btnEl  = document.getElementById("nextBtn");
  const finalScreen = document.getElementById("finalScreen");
  const darkEnd = document.getElementById("darkEnd");

  function renderScreen(i) {
    if (i === screens.length - 1) {
      cardEl.classList.add("hidden");

      setTimeout(() => {
        finalScreen.style.opacity = "1";
      }, 500);

      setTimeout(() => {
        finalScreen.style.opacity = "0";
        darkEnd.style.opacity = "1";
      }, 3500);

      return;
    }

    const s = screens[i];
    titleEl.textContent = s.title;
    line1El.textContent = s.line1;
    line2El.textContent = s.line2;
    hintEl.textContent = s.hint;
    btnEl.textContent = s.btn;
  }

  btnEl.addEventListener("click", () => {
    current++;
    renderScreen(current);
  });

  /* cursor trail */
  window.addEventListener("mousemove", (e) => {
    const t = document.createElement("div");
    t.className = "trail";
    t.style.left = e.clientX + "px";
    t.style.top = e.clientY + "px";
    document.body.appendChild(t);
    setTimeout(() => t.remove(), 900);
  });
</script>

</body>
</html>
